<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/users/home'>
                    Registeration Application
                </a>
            </p>
        </div>

        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                <span>
                    <img src="<%=locals.user.avatar%>"
                        alt="Profile picture" id="profile">
                </span>
                <li>
                    <a href="/users/home"><%= user.name %></a>
                </li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
                <% }else{ %>
                <form action="/users/create-session" method="POST">
                    <input type="email" name="email" placeholder="Email" required>
                    <input type="password" name="password" placeholder="Password" required>
                    <input type="submit" value="Sign In" id="login">

                </form>
                <% } %>
            </ul>
        </div>
    </nav>
</header>